<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <patterns jcr:primaryType="nt:unstructured">
        <hyperlink jcr:primaryType="nt:unstructured"
                   sling:resourceType="granite/ui/components/foundation/hyperlink"/>
    </patterns>
    <replacement
        jcr:primaryType="nt:unstructured"
        cq:rewriteFinal="{Boolean}true"
        cq:rewriteCommonAttrs="{Boolean}true"
        cq:rewriteRenderCondition="{Boolean}true">
        <hyperlink
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/hyperlink"
            href="${./href}"
            href_i18n="${./href_i18n}"
            target="${./target}"
            text="${./text}"
            hideText="${./hideText}"
            x-cq-linkchecker="${./x-cq-linkchecker}"
            icon="${./icon}"
            iconSize="${./iconSize}">
            <cq:rewriteProperties
                jcr:primaryType="nt:unstructured"
                icon="[(?:coral-Icon--)(.+), $1]"/>
        </hyperlink>
    </replacement>
</jcr:root>
