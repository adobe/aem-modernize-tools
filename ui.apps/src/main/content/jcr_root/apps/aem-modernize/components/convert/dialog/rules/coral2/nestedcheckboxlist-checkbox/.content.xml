<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <patterns jcr:primaryType="nt:unstructured">
        <nestedcheckboxlist-checkbox jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/foundation/form/checkbox">
            <sublist jcr:primaryType="nt:unstructured"
                     sling:resourceType="granite/ui/components/foundation/form/nestedcheckboxlist"/>
        </nestedcheckboxlist-checkbox>
    </patterns>
    <replacement
        jcr:primaryType="nt:unstructured"
        cq:rewriteCommonAttrs="{Boolean}true"
        cq:rewriteRenderCondition="{Boolean}true">
        <checkbox
            cq:rewriteFinal="{Boolean}true"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
            fieldLabel="${./fieldLabel}"
            fieldDescription="${./fieldDescription}"
            renderHidden="${./renderHidden}"
            name="${./name}"
            deleteHint="${./deleteHint}"
            value="${./value}"
            uncheckedValue="${./uncheckedValue}"
            emptyText="${./emptyText}"
            disabled="${./disabled}"
            required="${./required}"
            validation="${./validation}"
            checked="${./checked}"
            ignoreData="${./ignoreData}"
            text="${./text}"
            autosubmit="${./autosubmit}"
            tooltipPosition="${./tooltipPosition}">
            <sublist
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/nestedcheckboxlist"
                disconnected="${./sublist/disconnected}">
                <items
                    cq:rewriteMapChildren="./sublist/items"
                    jcr:primaryType="nt:unstructured">
                </items>
            </sublist>
        </checkbox>
    </replacement>
</jcr:root>
