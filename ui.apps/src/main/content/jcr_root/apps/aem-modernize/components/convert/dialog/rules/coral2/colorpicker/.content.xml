<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <patterns jcr:primaryType="nt:unstructured">
        <colorpicker jcr:primaryType="nt:unstructured"
                     sling:resourceType="granite/ui/components/foundation/form/colorpicker">
            <mappings jcr:primaryType="nt:unstructured"
                      cq:rewriteOptional="{Boolean}true"/>
        </colorpicker>
    </patterns>
    <replacement
        jcr:primaryType="nt:unstructured"
        cq:rewriteFinal="{Boolean}true"
        cq:rewriteCommonAttrs="{Boolean}true"
        cq:rewriteRenderCondition="{Boolean}true">
        <colorfield
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
            fieldLabel="${./fieldLabel}"
            fieldDescription="${./fieldDescription}"
            renderHidden="${./renderHidden}"
            name="${./name}"
            value="${./value}"
            disabled="${./disabled}"
            required="${./required}"
            showProperties="${./editType}"
            validation="${./validation}"/>
            <items
                cq:rewriteMapChildren="./mappings"
                jcr:primaryType="nt:unstructured"/>
    </replacement>
</jcr:root>
