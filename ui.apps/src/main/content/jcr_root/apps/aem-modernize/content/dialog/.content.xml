<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
      jcr:mixinTypes="[]"
      jcr:primaryType="nt:unstructured"
      jcr:title="Dialog Conversion Tool"
      sling:resourceType="aem-modernize/components/convert/dialog"
      consoleId="aem-modernize-dialog">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
              categories="[granite.shared,coralui3,granite.ui.coral.foundation,granite.ui.coral.foundation.admin,aem.modernize.dialog]"/>
        </head>
        <title
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/text"
          text="Dialog Conversion Tool"/>
        <actions jcr:primaryType="nt:unstructured">
            <secondary jcr:primaryType="nt:unstructured">
                <convert
                  granite:class="aem-DialogConverter-convertDialogs js-aem-DialogConverter-convertDialogs"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                  activeSelectionCount="multiple"
                  target=".aem-modernize-dialogs"
                  text="Convert dialog(s)"
                  variant="primary">
                </convert>
                <back
                  granite:class="js-aem-DialogConverter-back"
                  granite:hidden="{Boolean}true"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/button"
                  text="Back">
                </back>
            </secondary>
        </actions>
        <content
          granite:class="js-aem-DialogConverter-container"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <dialogSearch
                  granite:class="js-aem-DialogConverter-dialogSearch"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <actionbar
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/actionbar">
                            <primary jcr:primaryType="nt:unstructured">
                                <pathField
                                  granite:class="js-aem-DialogConverter-searchPath aem-DialogConverter-searchPath"
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                  emptyText="Enter a path, e.g. /apps/weretail/components"
                                  value="${empty param.path ? &quot;&quot; : param.path}"/>
                                <showButton
                                  granite:class="js-aem-DialogConverter-showDialogs"
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/button"
                                  text="Show dialogs"/>
                                <showConverted
                                  granite:class="js-aem-DialogConverter-showConvertedDialogRows"
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                  text="Show converted dialogs"/>
                            </primary>
                            <secondary jcr:primaryType="nt:unstructured">
                                <text
                                  granite:class="js-aem-DialogConverter-infoText aem-DialogConverter-infoText"
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/text"
                                  text=""/>
                            </secondary>
                        </actionbar>
                        <dialogs
                          granite:class="js-aem-DialogConverter-dialogs"
                          granite:rel="aem-dialogconversion-dialogs"
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/table"
                          itemResourceType="aem-modernize/components/convert/dialog/item"
                          orderable="{Boolean}false"
                          path="${param.path}"
                          selectionMode="row">
                            <columns jcr:primaryType="nt:unstructured">
                                <select
                                  jcr:primaryType="nt:unstructured"
                                  fixedWidth="{Boolean}true"
                                  select="{Boolean}true"/>
                                <dialogPath
                                  jcr:primaryType="nt:unstructured"
                                  jcr:title="Dialog path"
                                  sortable="{Boolean}true"/>
                                <type
                                  jcr:primaryType="nt:unstructured"
                                  jcr:title="Type"
                                  alignment="center"
                                  sortable="{Boolean}true"/>
                                <links
                                  jcr:primaryType="nt:unstructured"
                                  jcr:title="Links"
                                  alignment="center"/>
                                <convertedLinks
                                  jcr:primaryType="nt:unstructured"
                                  jcr:title="Converted dialog"
                                  alignment="center"
                                  sortable="{Boolean}true"/>
                            </columns>
                            <datasource
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="aem-modernize/components/convert/dialog/datasource"/>
                        </dialogs>
                    </items>
                </dialogSearch>
                <convertedDialogs
                  granite:class="js-aem-DialogConverter-convertedDialogs"
                  granite:hidden="{Boolean}true"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/table"
                  orderable="{Boolean}false">
                    <columns jcr:primaryType="nt:unstructured">
                        <dialogPath
                          jcr:primaryType="nt:unstructured"
                          jcr:title="Dialog path"
                          sortable="{Boolean}true"/>
                        <conversion
                          jcr:primaryType="nt:unstructured"
                          jcr:title="Conversion result"/>
                        <message
                          jcr:primaryType="nt:unstructured"
                          jcr:title="Message"
                          sortable="{Boolean}true"/>
                    </columns>
                </convertedDialogs>
            </items>
        </content>
    </jcr:content>
</jcr:root>
